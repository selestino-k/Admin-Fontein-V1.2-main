  </head>
  <body>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <!-- header start -->
    <%- include('header'); -%>
    <!-- header end   -->

    <style>
      .nav-link:hover{
        background-color: gray;
      }
    </style>

    <div class="row g-0 mt-5" style="min-height: calc(100vh - 50px);">
      <!-- header start -->
      <%- include('sidebar'); -%>
      <!-- header end   -->
      <div class="col-md-10 p-5 pt-5">
        <h3><i class="fa-solid fa-cloud-arrow-up"></i>&nbsp&nbspDATA PINDAH MASUK</h3><hr>
        <!-- <a href="/tambah_data/tambah-data-masuk" class="btn btn-primary mb-3 "><i class="fa-solid fa-pen-to-square"></i>Tambah Data</a> -->
        <!-- First Row -->
        <table id="dtHorizontalVerticalExample" class="table table-striped table-bordered table-sm " cellspacing="0"
          width="100%">
          <thead>
            <tr>
              <th scope="col" class="text-center">No</th>
              <th scope="col" class="text-center">NIK</th>
              <th scope="col" class="text-center">Nama</th>
              <th scope="col" class="text-center">Status Perkawinan</th>
              <th scope="col" class="text-center">Jenis Kelamin</th>
              <!-- <th scope="col" class="text-center">Alasan</th> -->
              <th scope="col" class="text-center">Aksi</th>
        
           
            </tr>
          </thead>
          <tbody>
            <tr>
              <% var number = 1; %>  
              <% for (let row of rows) {%>
              <td scope="row" class="text-center"><%= number %></td>
              <td scope="row" class="text-center"><%= row.nik %></td>
              <td scope="row" class="text-center"><%= row.nama %></td>
              <td scope="row" class="text-center"><%= row.status_perkawinan %></td>
              <td scope="row" class="text-center"><%= row.jenis_kelamin %></td>
              <!-- <td scope="row" class="text-center">-</td> -->
              <td scope="row" class="text-center">
                <!-- menambah JSON.stringify(row) ke atribut data-json untuk diakses dari modal -->
                <!-- setiap data json memiliki nilai berbeda mengikuti variabel row -->
                <button type="button" class="border-0" data-bs-toggle="modal" data-bs-target="#exampleModal"
                  data-json="<%= JSON.stringify(row) %>"><i
                    class="fa-solid fa-users-rectangle bg-primary p-2 text-white rounded" data-toggle="tooltip"
                    title="Detail"></i></button>
              <button class="border-0" type="button" data-bs-toggle="modal" data-bs-target="#exampleModalEdit" style="cursor:not-allowed;"><i class="fa-solid fa-pen-to-square bg-success p-2 text-white rounded" data-toggle="tooltip" title="Edit"></i></button>
              <button type="button" class="border-0" data-bs-toggle="modal" data-bs-target="#exampleModalDelete" style="cursor:not-allowed;"><i class="fa-solid fa-trash-can bg-danger p-2 text-white rounded" data-toggle="tooltip" title="Delete"></i></button>
              </td>
            </tr>
            <% number++ %>
            <% }%>
          </tbody>
        </table>
      </div>
    </div>



    <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
  <div class=" modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Detail Penduduk</h5>
      <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body table-responsive">
      <table class="table table-bordered no-margin">
        <tbody>
          <!-- <tr>
          <th style="width:50%">Id KK</th>
          <td>KK010202</td>
        </tr> -->
          <tr>
            <th style="width:50%">NIK</th>
        <!-- target binding ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ -->
            <td class="nik"></td>
          </tr>
          <tr>
            <th style="width:50%">No KK</th>
            <td class="kel_no_kk"></td>
          </tr>

          <tr>
            <th style="width:50%">Nama</th>
            <td class="nama"></td>
          </tr>
          <!-- <tr>
            <th style="width:50%">Alamat</th>
            <td class="alamat"></td>
          </tr> -->
          <tr>
            <th style="width:50%">Jenis Kelamin</th>
            <td class="jenis_kelamin"></td>
          </tr>
          <tr>
            <th style="width:50%">Lahir</th>
            <td class="lahir"></td>
          </tr>
          <tr>
            <th style="width:50%">Hubungan Keluarga</th>
            <td class="hubungan_keluarga"></td>
          </tr>
          <tr>
            <th style="width:50%">Pendidikan</th>
            <td class="pendidikan"></td>
          </tr>
          <tr>
            <th style="width:50%">Pekerjaan</th>
            <td class="pekerjaan"></td>
          </tr>
          <tr>
            <th style="width:50%">Status Perkawinan</th>
            <td class="status_perkawinan"></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
  </div>
</div>
</div>



       <!-- footer start -->
       <%- include('footer'); -%>
