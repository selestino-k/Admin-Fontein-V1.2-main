        <div class="row g-0 mt-5" style="min-height: calc(100vh - 50px);">
            <!-- header start -->
            <%- include('sidebar'); -%>
                <!-- header end   -->
                <div class="col-md-10 p-5 pt-5">
                    <h3><i class="fa-solid fa-dove"></i>&nbsp&nbspSTATISTIK STATUS PERNIKAHAN</h3>
                    <hr>

                    <li class="nav-item dropdown list-unstyled">
                        <a class="dropdown-toggle active btn btn-primary" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-chart-column"></i>    
                            Ubah Grafik
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><button onclick="ChartType('bar')" class="dropdown-item btn"  href="#"><img src="https://img.icons8.com/office/16/000000/futures.png"/>&nbsp&nbspBar Chart</button></li>
                            <li><button onclick="ChartType('pie')" class="dropdown-item"  href="#"><img src="https://img.icons8.com/flat-round/16/000000/pie-chart-3d.png"/>&nbsp&nbspPie Chart</button></li>
                            <li><button onclick="ChartType('doughnut')" class="dropdown-item"  href="#"><img src="https://img.icons8.com/office/16/000000/doughnut-chart--v1.png"/>&nbsp&nbspDoughnut Chart</button></li>
                            
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                        </ul>
                    </li>
                    <div class="container-fluid mb-5">
                        <canvas id="Status-Chart" style="position: relative; height:40vh; width:80vw; max-width: fit-content; min-width: fit-content;"></canvas>
                    </div>

                    <!-- First Row -->
             <table id="dtHorizontalVerticalExample" class="table table-striped table-bordered table-sm "
             cellspacing="0" width="100%" style="color:  var(--textcolor);">
             <thead>
                 <tr>
                     <th scope="col" class="text-center">No</th>
                     <th scope="col" class="text-center">Kategori</th>
                     <th scope="col" class="text-center">Laki-Laki</th>
                     <th scope="col" class="text-center">Perempuan</th>
                     <th scope="col" class="text-center">Jumlah</th>
                 </tr>
             </thead>
             <tbody>
                <% var number = 1; %>
               
                 <tr style="color:  var(--textcolor);">
                     <td scope="row" class="text-center"><%= number %></td>
                     <td scope="row" class="text-center">Sudah Menikah</td>
                     <% for (let row of rows2third) {%>
                     <td scope="row" class="text-center"><%= row.TotalPriaSudahMenikah %></td>
                     <% }%>
    
                     <% for (let row of rows2sec) {%>
                     <td scope="row" class="text-center"><%= row.TotalWanitaSudahMenikah %></td>
                     <% }%>
                        
                     <% for (let row of rows2totalsdhnikah) {%>
                     <td scope="row" class="text-center"><%= row.TotalSudahMenikah %></td>
                     <% }%>
                     <% number++; %>
                     
                    </tr>


                
                
                    
                        
                <tr style="color:  var(--textcolor);">
                    <td scope="row" class="text-center"><%= number %></td>

                    <td scope="row" class="text-center">Belum Menikah</td>

                    <% for (let row of rows1third) {%>
                    <td scope="row" class="text-center"><%= row.TotalPriaBelumMenikah %></td>
                    <% }%>

                    <% for (let row of rows1sec) {%>
                    <td scope="row" class="text-center"><%= row.TotalWanitaBelumMenikah %></td>
                    <% }%>
                    
                    <% for (let row of rows1totalblmnikah) {%>
                    <td scope="row" class="text-center"><%= row.TotalBelumMenikah %></td>
                    <% }%>
                    <% number++; %>
               </tr>
                    

       
               <tr style="color:  var(--textcolor);">
                <td scope="row" class="text-center"><%= number %></td>
                <td scope="row" class="text-center">Cerai Hidup</td>
                <% for (let row of rows3third) {%>
                <td scope="row" class="text-center"><%= row.TotalPriaCeraiHidup %></td>
                <% }%>

                <% for (let row of rows3sec) {%>
                <td scope="row" class="text-center"><%= row.TotalWanitaCeraiHidup %></td>
                <% }%>
                    
                <% for (let row of rows3totalceraihidup) {%>
                <td scope="row" class="text-center"><%= row.TotalCeraiHidup %></td>
                <% }%>
                <% number++; %>
                </tr>
                

                
                <tr style="color:  var(--textcolor);">
                    <td scope="row" class="text-center"><%= number %></td>
                    <td scope="row" class="text-center">Cerai Mati</td>
                    <% for (let row of rows4third) {%>
                        <td scope="row" class="text-center"><%= row.TotalPriaCeraiMati %></td>
                    <% }%>
    
                    <% for (let row of rows4sec) {%>
                    <td scope="row" class="text-center"><%= row.TotalWanitaCeraiMati %></td>
                    <% }%>
                        
                    <% for (let row of rows4totalceraimati) {%>
                    <td scope="row" class="text-center"><%= row.TotalCeraiHidup %></td>
                    <% }%>
                    <% number++; %>
                </tr>

                
             </tbody>
         </table>
