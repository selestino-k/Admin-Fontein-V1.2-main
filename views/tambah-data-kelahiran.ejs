<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tambah Data Kelahiran</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- <link rel="icon" href="/public/favicon.ico"> -->
</head>
<body>
    <!-- header start -->
    <%- include('header'); -%>
    <!-- header end   -->


    <div class="row g-0 mt-5" style="min-height: calc(100vh - 50px);">
      <!-- header start --> 
      <%-  include('sidebar'); -%>
      <!-- header end   -->

      <div class="col-md-10 p-5 pt-5">
        <h3><i class="fa-solid fa-users ms-2"></i>&nbsp&nbspTAMBAH DATA KELAHIRAN</h3><hr>
        
        <form method="POST" action="/tambah_data/tambah-data-kelahiran" novalidate>
            <!-- <div class="form-label">
            <label>ID Kelahiran</label>
            <input type="text" name="" class="form-control">
            </div> -->
            <div class="form-label">
            <label>Nama Lengkap</label>
            <input type="text" name="nama" class="form-control">
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-label">
                  <label>Nomor Kartu Keluarga</label>
                  <select class="form-control" name="kel_nomor_kk">
                    <option>-</option>
                    <% for (let row of keluarga) {%>
                      <option value="<%= row.nomorKK %>"><%= row.nomorKK %></td>
                    <% } %>
                  </select>
                </div>
              </div>
            </div>
 


            <div class="form-label">
            <label>Pilih Jenis Kelamin</label>
                <select class="form-control" name="jenis_kelamin">
                    <option>-</option>
                    <option value="Laki-Laki">Laki-Laki</option>
                    <option value="Perempuan">Perempuan</option>
                </select>

                <div class="col-md-6">
                <div class="form-label">
                        <label>Tanggal Lahir</label>
                        <input type="date" name="tgl_lahir" class="form-control">
                </div>
                </div>


            <button type="submit" class="btn btn-primary">SIMPAN</button>
            <a href=""><button type="reset" class="btn btn-danger">RESET</button></a>
            <a href="/data/data-kelahiran"><button type="button" class="btn btn-warning">KEMBALI</button></a>
        
            
        </form>
      </div>
    </div>



    <!-- footer start -->
    <%- include('footer'); -%>
    <!-- footer end   -->
     <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
